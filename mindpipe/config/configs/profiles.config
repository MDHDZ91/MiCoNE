
// Compilation of commonly used profile combinations of executor and container engines

profiles {

    local {
        process.executor = "local"
    }

    sge {
        process.executor = "sge"
        process.queue = "long"
        process.clusterOptions = "-P \$PROJECT -l h_rt=5:00:00"
    }

    singularity {
        singularity.enabled = true
    }

    docker {
        docker.enabled = true
    }

    sge_sing {
        singularity.enabled = true
        process.executor = "sge"
    }

}

