pick_closed_reference_otus {
    ncpus = "{{ pick_closed_reference_otus['ncpus'] }}" // 4
}

params {
    output_dir = "{{ output_dir }}"
    sequences = "{{ input['sequence_16s'] }}"
    references = "{{ input['reference_16s'] }}"
    taxonomy = "{{ input['taxonomy_map'] }}"
    parameters = "{{ input['qiime1_parameters'] }}"

    ncpus = pick_closed_reference_otus.ncpus
}

report {
    enabled = true
    file = "${params.output_dir}/report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/trace.txt"
}