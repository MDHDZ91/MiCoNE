pick_de_novo_otus {
    ncpus = "{{ pick_de_novo_otus['ncpus'] }}" // 4
}

params {
    output_dir = "{{ output_dir }}"
    sequences = "{{ input['sequence_16s'] }}"
    parameters = "{{ input['qiime1_parameters'] }}"

    ncpus = pick_de_novo_otus.ncpus
}

report {
    enabled = true
    file = "${params.output_dir}/report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/trace.txt"
}