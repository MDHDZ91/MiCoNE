pick_open_reference_otus {
    picking_method = "{{ pick_open_reference_otus['picking_method'] }}" // "sortmerna_sumaclust"
    ncpus = "{{ pick_open_reference_otus['ncpus'] }}" // 4
    percent_subsample = "{{ pick_open_reference_otus['percent_subsample'] }}" // 0.001
}

params {
    output_dir = "{{ output_dir }}"
    sequences = "{{ input['sequence_16s'] }}"
    references = "{{ input['reference_16s'] }}"
    parameters = "{{ input['qiime1_parameters'] }}"

    picking_method = pick_open_reference_otus.picking_method
    ncpus = pick_open_reference_otus.ncpus
    percent_subsample = pick_open_reference_otus.percent_subsample
}

report {
    enabled = true
    file = "${params.output_dir}/report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/trace.txt"
}