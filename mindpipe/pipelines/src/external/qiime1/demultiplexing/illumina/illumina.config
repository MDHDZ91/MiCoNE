demutiplexing_fastq {
    phred_quality_threshold = "{{ demultiplexing_fastq['phred_quality_threshold'] }}"
}

params {
    output_dir = "{{ output_dir }}"
    sequence_reads = "{{ input['sequence_16s'] }}"
    barcode_files = "{{ input['barcode'] }}"
    mapping_files = "{{ input['mapping'] }}"

    phred_quality_threshold = demutiplexing_fastq.phred_quality_threshold
}

report {
    enabled = true
    file = "${params.output_dir}/report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/trace.txt"
}