taxonomy_assignment {
    classifier_artifact = "{{ taxonomy_assignment['classifier_artifact'] }}"
    n_jobs = "{{ taxonomy_assignment['n_jobs'] }}" // 4
    reads_per_batch = "{{ taxonomy_assignment['reads_per_batch'] }}" // 0
}

params {
    output_dir = "{{ output_dir }}"
    repseq_artifacts = "{{ input['qiime2_featuredata_sequences'] }}"

    classifier_artifact = taxonomy_assignment.classifier_artifact
    n_jobs = taxonomy_assignment.n_jobs
    reads_per_batch = taxonomy_assignment.reads_per_batch
}

report {
    enabled = true
    file = "${params.output_dir}/report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/trace.txt"
}