demultiplexing {
    barcodes_column = "{{ demultiplexing['barcodes_column'] }}"
    rev_comp_barcodes = "{{ demultiplexing['rev_comp_barcodes'] }}"
    rev_comp_mapping_barcodes = "{{ demultiplexing['rev_comp_mapping_barcodes'] }}"
}

params {
    output_dir = "{{ output_dir }}"
    sequence_artifacts = "{{ input['qiime2_mutliplexed_sequences'] }}"
    barcodes_file = "{{ input['qiime2_mapping'] }}"

    barcodes_column = demultiplexing.barcodes_column
    rev_comp_barcodes = demultiplexing.rev_comp_barcodes
    rev_comp_mapping_barcodes = demultiplexing.rev_comp_mapping_barcodes
}

report {
    enabled = true
    file = "${params.output_dir}/report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/trace.txt"
}